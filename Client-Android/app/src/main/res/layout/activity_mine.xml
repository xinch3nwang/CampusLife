<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <ImageView
                android:id="@+id/imageView_mine_img"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_gravity="center"
                android:scaleType="center"
                app:srcCompat="@drawable/logo" />

            <TextView
                android:id="@+id/textview_mine_name"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:text="用户名"
                android:layout_marginLeft="6dp"
                android:textSize="28sp"
                android:textStyle="bold" />
        </TableRow>

        <TableRow android:layout_height="wrap_content" >
            <Space
                android:layout_width="match_parent"
                android:layout_height="60dp" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView_mine_follow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/barrier"
            android:fontFamily="serif-monospace"
            android:text="我的关注"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_mine_fans"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/barrier"
            android:fontFamily="serif-monospace"
            android:text="我的粉丝"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_mine_article"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/barrier"
            android:fontFamily="serif-monospace"
            android:text="我的发文"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/textView_mine_update"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/barrier"
            android:fontFamily="serif-monospace"
            android:text="修改信息"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textSize="22sp" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@drawable/outline"
        android:gravity="bottom"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_prompt2"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-condensed"
            android:text="提醒"
            android:textColor="@color/purple_700"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_community2"
            style="@android:style/Widget.Material.Light.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fontFamily="sans-serif-medium"
            android:text="社区"
            android:textColor="@color/purple_700"
            android:textSize="20sp" />

        <Button
            android:id="@+id/button_mine2"
            style="@android:style/Widget.Material.Light.Button.Borderless.Colored"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:clickable="false"
            android:fontFamily="sans-serif-condensed"
            android:lines="1"
            android:text="我的"
            android:textAllCaps="false"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>